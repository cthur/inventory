<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.houseinventory.MainActivity" >

    <Button
        android:id="@+id/btnExpiresFood1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textFoodItem1"
        android:layout_centerHorizontal="true"
        android:text="Expires?" />

    <Button
        android:id="@+id/btnBestByFood1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnExpiresFood1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnExpiresFood1"
        android:text="Best by?" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnExpiresFood1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/txtMuch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar1"
        android:layout_centerHorizontal="true"
        android:text="How much left?" />
    
    
    
    
    <TextView
        android:id="@+id/textFoodItem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/txtNotes1"
        android:layout_marginTop="33dp"
        android:ems="10" 
        android:text="Food Item 2"
        />

    <Button
        android:id="@+id/btnExpiresFood2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textFoodItem2"
        android:layout_centerHorizontal="true"
        android:text="Expires?" />

    <Button
        android:id="@+id/btnBestByFood2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnExpiresFood2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnExpiresFood2"
        android:text="Best by?" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnExpiresFood2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/txtMuch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar2"
        android:layout_centerHorizontal="true"
        android:text="How much left?" />

    <TextView
        android:id="@+id/textFoodItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textFoodItem2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:text="Food Item 1" />

    <TextView
        android:id="@+id/txtNotes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ratingBar2"
        android:layout_below="@+id/txtMuch2"
        android:layout_marginTop="9dp"
        android:text="Notes" />

    <TextView
        android:id="@+id/txtNotes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtNotes2"
        android:layout_below="@+id/txtMuch1"
        android:layout_marginRight="8dp"
        android:text="Notes" />

</RelativeLayout>